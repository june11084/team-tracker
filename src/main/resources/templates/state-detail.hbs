{{#partial "content"}}
    <p>State:</p>
    <p>{{state.name}}</p>
    <p>Teams:</p>
    <ul>
        {{#if teams}}
            {{#each teams}}
                <p>Team: {{team}}</p>
                <p>Members: {{members}}</p>
                <a href="/states/{{state.id}}/posts/{{id}}/update">Edit this team</a>
            {{/each}}
        {{else}}
            <p>No Members!</p>
        {{/if}}
    </ul>
    <a href="/states/{{state.id}}/posts/new" class="button">+ Add Team</a>
    </p>
{{/partial}}
{{> layout.hbs}}